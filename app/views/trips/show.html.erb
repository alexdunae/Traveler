<table id="single-trip-table" class="table table-bordered table-striped">
  <tr>
    <td><%= @trip.name %></td>
    <td rowspan="2"><%= @trip.description %></td>
  </tr>
  <tr>
    <td><%= @trip.start_date %> to <%= @trip.end_date %></td>
  </tr>
</table>

<div class="photos-info">
  <p>Album:</p>
  <div class="well">
    <%= link_to "Add Photo", new_user_trip_photo_path(@trip.user, @trip), remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-photo"></div>

  <div class="photo-index">
      <%= render @trip.photos %>  
  </div>
</div>
<div id="photos-modal" class="modal hide fade"></div>