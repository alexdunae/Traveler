<div class="row">
  <div class="col-md-8 photo-show-image"><%= image_tag @photo.image.url(:big) %></div>
  <div class="col-md-4">
    <div class="row">
      <div class="col-md-12"><h3><%= @photo.name %></h3></div>
      <div class="col-md-12"><em>Photo taken on <%= @photo.taken_date.to_formatted_s(:long_ordinal) %></em></div>
      <div class="col-md-12 photo-show-description"><%= @photo.description %></div>
      <div class="col-md-12">
          <div id="map" style='width: 400px; height: 200px;'></div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>