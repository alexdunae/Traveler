<%= form_for :session, url: session_path, html: { class: "form-signin" } do |form| %>
  <h2 class="form-signin-heading">Please Sign In</h2>
  <div class="form-group">
    <%= form.label :email, class: "sr-only" %>
    <%= form.text_field :email, type: 'email', class: "form-control", required: true, placeholder: "Email address" %>
  </div>

  <div class="form-group">
    <%= form.label :password, class: "sr-only" %>
    <%= form.password_field :password, class: "form-control", required: true, placeholder: "Password" %>
  </div>

  <div class="submit-field">
    <%= form.submit "Sign In", class: "btn btn-lg btn-primary btn-block" %>
  </div>
  <br>
  <div class="other-links">
    <%= link_to t('.forgot_password'), new_password_path %>
  </div>
<% end %>
