<div class="container">
  <h2>Add Friends</h2>
  <table id="users-table" class="table table-bordered table-striped">
    <thead>
      <tr>
        <th colspan="3">Other Travelers</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="friend-avatar"><%= image_tag user.avatar.url(:thumb) %></td>
          <td class="friend-info"><%= link_to user.name, user_path(user) %></td>
          <td><%= link_to "Add Friend", friendships_path(friend_id: user), class: "btn btn-primary", method: :post %></td>
        </tr>
      <% end %>  
    </tbody>
  </table>
</div>