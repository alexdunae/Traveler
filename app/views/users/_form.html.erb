<% if @user.persisted? %>
  <div class="form-group">
    <%= image_tag @user.avatar.url(:thumb) %>
    <%= form.label :avatar, 'Profile picture:', class: "sr-only" %>
    <span class="btn btn-primary btn-file">
      Browse <%= form.file_field :avatar %>
    </span>
  </div>
<% end %>

<div class="form-group">  
  <%= form.label :name, 'Name:' %>
  <%= form.text_field :name,  class: "form-control", required: true %>
</div>

<% if @user.persisted? %>
  <div class="form-group">
    <%= form.label :about, 'Tell us about you:' %>
    <%= form.text_area :about, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :country, 'Country:' %>
    <%= form.text_field :country, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :city, 'City:' %>
    <%= form.text_field :city, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :birth_date, 'Birth Date:' %>
    <%= form.date_select :birth_date, { start_year: Date.current.year, end_year: 1900, include_blank: true, default: nil }, { class: "form-control" } %>
  </div>
<% end %>

<div class="form-group">
  <%= form.label :email, 'Email:' %>
  <%= form.text_field :email, type: 'email', required: true, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :password, 'Password:' %>
  <%= form.password_field :password, class: "form-control" %>
</div>